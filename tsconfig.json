{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "tsconfig.json"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/view",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/redis",
      "@adonisjs/limiter",
      "@adonisjs/shield"
    ],
    "allowSyntheticDefaultImports": true
  }
}
